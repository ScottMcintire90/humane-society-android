<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.humanesociety.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/grass"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adopt Now"
        android:id="@+id/adoptButton"
        android:textColor="@color/whiteText"
        android:background="@color/dividerColor"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:letterSpacing=".4"
        android:textAllCaps="false"/>

    <ImageView
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/petlessness"
        android:layout_above="@+id/adoptButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oregon Humane Society"
        android:id="@+id/textView"
        android:paddingRight="10dp"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold"
        android:shadowColor="@color/secondaryText"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:id="@+id/imageView"
            android:src="@drawable/humane_logo"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/frame"/>
    </FrameLayout>

</RelativeLayout>
