<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.humanesociety.ProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/grass"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/petNameView"
        android:textColor="@color/whiteText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:shadowColor="@color/secondaryText"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"/>

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/petImageView"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/petNameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textColor="@color/whiteText"
        android:id="@+id/textView2"
        android:layout_below="@+id/petImageView"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/secondaryText"
        android:shadowDx="5"
        android:shadowDy="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:paddingLeft="15dp"
        android:id="@+id/petAgeView"
        android:textColor="@color/whiteText"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="31dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/petColorView"
        android:layout_marginTop="43dp"
        android:paddingLeft="15dp"
        android:textColor="@color/whiteText"
        android:layout_below="@+id/petAgeView"
        android:layout_alignLeft="@+id/petAgeView"
        android:layout_alignStart="@+id/petAgeView"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/petWeightView"
        android:layout_marginTop="47dp"
        android:paddingLeft="15dp"
        android:textColor="@color/whiteText"
        android:layout_below="@+id/petColorView"
        android:layout_alignLeft="@+id/petColorView"
        android:layout_alignStart="@+id/petColorView"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/petSexView"
        android:paddingLeft="15dp"
        android:textColor="@color/whiteText"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="34dp" />
</RelativeLayout>
